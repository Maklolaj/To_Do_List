@model IEnumerable<NET5_test.Models.Expense>
@using NET5_test.Controllers;
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Expense Name
                </th>

                <th>
                    Price
                </th>


            </tr>
        </thead>

        <tbody>
            @foreach (var a in Model)
            {

                <tr>
                    <td width="30%">@a.ExpenseName</td>

                    <td width="30%">@a.Price</td>
                    <td width="30%">
                        <a asp-action="Edit" asp-route-id="@a.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@a.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@a.Id">Delete</a>
                    </td>

                </tr>
            }
        <tr>
            @{
                double suma = 0.0;
                foreach (var item in Model)
                {
                    double price = item.Price;
                    suma = suma + price;
                }

            }
            <td ><strong> Total </strong></td>
            <td width="30%"> <strong>@suma</strong></td>





        </tr>

        </tbody>
    </table>
}
else
{
    <p>No items created yet</p>
}


